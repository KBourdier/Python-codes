print "The program is starting up"

option = raw_input("Enter C for Circle or T for Triangle: ")

if option == 'C' :
  radius = float(raw_input("Please enter the radius: "))
  area = 3.14159 * radius **2
  print "The area is %f" % (area)

elif option == 'T': 
  base = float(raw_input("Please enter the base: "))
  height = float(raw_input("Please enter the height: "))
  area = 0.5 * base * height
  print "The area is %f" % area

else :
  print "That is an invalid shape, please try again with C or T"

print "The program is now exiting"
